<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="340dp"
    android:layout_height="260dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/trips">

    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_ride" />

    <TextView
        android:id="@+id/rides"
        android:layout_width="100dp"
        android:layout_height="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="@string/trips"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/driverName"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-135dp"
        android:layout_marginTop="40dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-125dp"
        android:layout_marginTop="40dp"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_delete" />

    <TextView
        android:id="@+id/completed"
        android:layout_width="235dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-315dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:fontFamily="serif"
        android:text="@string/complete"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFeedback"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bookbtn"
        android:text="Feedback"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />


    <ImageView
        android:id="@+id/picPickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-315dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/ic_pickup" />

    <TextView
        android:id="@+id/pickupDis"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/pickupDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="140dp"/>

    <ImageView
        android:id="@+id/dotLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-245dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/ic_line" />

    <ImageView
        android:id="@+id/picDropoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-24dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/ic_dropoff" />

    <TextView
        android:id="@+id/dropoffDis"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="178dp"/>

    <TextView
        android:id="@+id/dropoffDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-200dp"
        android:layout_marginTop="198dp"/>

    <TextView
        android:id="@+id/lkr"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="230dp"
        android:text="LKR"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="230dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-240dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="-244dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="-55dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="-274dp"
        android:layout_marginTop="118dp"
        android:layout_marginRight="-24dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="-305dp"
        android:layout_marginTop="227dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

</LinearLayout>