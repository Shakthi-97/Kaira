<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey"
    tools:context=".EditExtraFacility">

    <ImageView
        android:id="@+id/productImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/seat"
        android:layout_marginTop="80dp"
        />


    <TextView
        android:id="@+id/seat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seat"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="145dp"

        />

    <EditText
        android:id="@+id/qty_count"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/etc"
        android:ems="10"
        android:hint="@string/qty"
        android:layout_below="@+id/lkr"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:layout_marginLeft="205dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/lkr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lkr"
        android:layout_below="@+id/seat_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/seat_amount1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2000"
        android:textSize="20sp"
        android:layout_below="@+id/seat_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="245dp"
        />

    <TextView
        android:id="@+id/front_rs1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImageView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:text="@string/lkr"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/seat_price1"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/productImageView"
        android:background="@drawable/etc"
        android:ems="10"
        android:text="0"
        android:inputType="number"
        android:paddingLeft="28dp"
        android:paddingTop="5dp"
        android:textColor="#000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/extra_next"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="210dp"
        android:background="@drawable/but"
        android:paddingRight="8dp"
        android:text="next"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        />


    <Button
        android:id="@+id/submit_tot1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/but"
        android:paddingRight="8dp"
        android:text="Save"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        />



    <ImageView
        android:id="@+id/gpsImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/gps"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp" />


    <TextView
        android:id="@+id/gps_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gps"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="195dp"

        />

    <EditText
        android:id="@+id/qty_num"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/etc"
        android:ems="10"
        android:hint="@string/qty"
        android:layout_below="@+id/lkr"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:layout_marginLeft="195dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/amt_lkr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lkr"
        android:layout_below="@+id/seat_name"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="200dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gps_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="800"
        android:textSize="20sp"
        android:layout_below="@+id/gps_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="245dp"
        />

    <TextView
        android:id="@+id/front1_rs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gpsImage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:text="@string/lkr"
        android:textSize="20sp"
        android:textColor="#000" />


    <TextView
        android:id="@+id/gps_price"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/productImageView"
        android:background="@drawable/etc"
        android:ems="10"
        android:text="0"
        android:inputType="number"
        android:paddingLeft="28dp"
        android:paddingTop="5dp"
        android:textColor="#000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/front2_rs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="490dp"
        android:text="@string/lkr"
        android:textColor="#000"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/tot_price"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/etc"
        android:paddingLeft="50dp"
        android:paddingTop="5dp"
        android:text="0"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/delete_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="78dp"
        android:padding="5dp"
        />



    <ImageView
        android:id="@+id/delete_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="300dp"
        android:padding="5dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-7dp"
        android:layout_marginRight="-7dp"
        android:layout_marginBottom="527dp"
        android:background="#000000" />



    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="470dp"
        android:background="#000000" />


</RelativeLayout>

