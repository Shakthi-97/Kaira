<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/Cus_Name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name*"
        android:textColor="#000" />


    <EditText
        android:id="@+id/Cus_email"
        android:hint="Email*"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="8dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="#000"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Cus_Contact_No"
        android:hint="Contact No*"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="8dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/Cus_email"
        android:layout_alignStart="@+id/Cus_email"
        android:layout_below="@+id/Cus_email"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <EditText
        android:id="@+id/Cus_Password"
        android:hint="Password*"
        android:drawableLeft="@drawable/ic_baseline_visibility_off_24"
        android:drawablePadding="8dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/Cus_email"
        android:layout_alignStart="@+id/Cus_email"
        android:layout_below="@+id/Cus_email"
        android:layout_marginTop="60dp"
        android:textColor="#000"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <Button
        android:id="@+id/reg_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="@string/register"
        android:background="@drawable/but"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="80dp"
        android:textColor="#fff"
        android:textStyle="italic|bold"
        android:textSize="15sp"
        />
</RelativeLayout>